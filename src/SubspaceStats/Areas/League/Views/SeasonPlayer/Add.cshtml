@using SubspaceStats.Areas.League.Models.Season
@using SubspaceStats.Areas.League.Models.SeasonPlayer
@model AddPlayersViewModel

@{
    ViewData["Title"] = "Add Season Players";
    IEnumerable<SelectListItem> teams =
        from team in Model.Teams
        select new SelectListItem(team.Name, team.Id.ToString());
}

<h1>Add Season Players</h1>

<div class="mb-3">
    <a asp-controller="Season" asp-action="Players" asp-route-seasonId="@Model.SeasonId">Back to Season Rounds</a>
</div>

<div class="container">
    <form asp-action="Add">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>Input the names of the players to add, one per line.</div>
        <div class="mb-3">
            <label asp-for="PlayerNames" class="form-label"></label>
            <textarea asp-for="PlayerNames" class="form-control" rows="5"></textarea>
            <span asp-validation-for="PlayerNames" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TeamId" class="form-label"></label>
            <select asp-for="TeamId" asp-items="@teams" class="form-select" aria-describedby="game-type-note">
                <option value=""></option>
            </select>
            <span asp-validation-for="TeamId" class="text-danger"></span>
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary m-2">Add</button>
            <a asp-controller="Season" asp-action="Players" asp-route-seasonId="@Model.SeasonId" class="btn btn-secondary m-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}