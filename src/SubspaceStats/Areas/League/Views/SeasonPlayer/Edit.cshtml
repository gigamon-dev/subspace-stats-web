@using SubspaceStats.Areas.League.Models.Season
@using SubspaceStats.Areas.League.Models.SeasonPlayer
@model SeasonPlayerViewModel

@{
    ViewData["Title"] = "Edit Season Player";
    IEnumerable<SelectListItem> teams =
        from team in Model.Teams
        select new SelectListItem(team.Name, team.Id.ToString());
}

<h1>Edit Season Player</h1>

<div class="mb-3">
    <a asp-controller="Season" asp-action="Players" asp-route-seasonId="@Model.SeasonId">Back to Season Rounds</a>
</div>

<div class="container">
    <form asp-action="Edit">
        <input asp-for="Model.PlayerId" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>Input the names of the players to add, one per line.</div>
        <div class="mb-3">
            <label asp-for="Model.PlayerName" class="form-label"></label>
            <input asp-for="Model.PlayerName" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Model.TeamId" class="form-label"></label>
            <select asp-for="Model.TeamId" asp-items="@teams" class="form-select" aria-describedby="game-type-note">
                <option value=""></option>
            </select>
            <span asp-validation-for="Model.TeamId" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <input asp-for="Model.IsCaptain" class="form-check-input" />
            <label asp-for="Model.IsCaptain" class="form-check-label"></label>
            <span asp-validation-for="Model.IsCaptain" class="text-danger d-block"></span>
        </div>
        <div class="mb-3 form-check">
            <input asp-for="Model.IsSuspended" class="form-check-input" />
            <label asp-for="Model.IsSuspended" class="form-check-label"></label>
            <span asp-validation-for="Model.IsSuspended" class="text-danger d-block"></span>
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary m-2">Save</button>
            <a asp-controller="Season" asp-action="Players" asp-route-seasonId="@Model.SeasonId" class="btn btn-secondary m-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}