@using SubspaceStats.Areas.League.Models.Season
@model CreateSeasonViewModel

@{
    ViewData["Title"] = "New Season";
    IEnumerable<SelectListItem> leagues =
        from league in Model.Leagues
        select new SelectListItem(league.Name, league.Id.ToString());
}

<h1>New Season</h1>

<div class="mb-3">
    <a asp-controller="League" asp-action="Index">League List</a>
</div>

<div class="container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label class="form-label">League</label>
            <select asp-for="Model.LeagueId" asp-items="@leagues" class="form-select"></select>
            <span asp-validation-for="Model.LeagueId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Model.SeasonName" class="form-label"></label>
            <input asp-for="Model.SeasonName" class="form-control" />
            <span asp-validation-for="Model.SeasonName" class="text-danger"></span>
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary m-2">Create</button>
            <a asp-controller="League" asp-action="Index" class="btn btn-secondary m-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}