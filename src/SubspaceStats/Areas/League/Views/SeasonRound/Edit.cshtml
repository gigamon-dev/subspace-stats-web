@using SubspaceStats.Areas.League.Models.Season
@model SeasonRound

@{
    ViewData["Title"] = "Edit Season Round";
}

<h1>Edit Season Round</h1>

<div class="mb-3">
    <a asp-controller="Season" asp-action="Rounds" asp-route-seasonId="@Model.SeasonId">Back to Season Rounds</a>
</div>

<div class="container">
    <form asp-action="Edit">
        <input asp-for="SeasonId" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="RoundNumber" class="form-label"></label>
            <input type="number" class="form-control" value="@Model.RoundNumber" disabled readonly />
            <input asp-for="RoundNumber" type="hidden" />
        </div>
        <div class="mb-3">
            <label asp-for="RoundName" class="form-label"></label>
            <input asp-for="RoundName" class="form-control" />
            <span asp-validation-for="RoundName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RoundDescription" class="form-label"></label>
            <textarea asp-for="RoundDescription" class="form-control"></textarea>
            <span asp-validation-for="RoundDescription" class="text-danger"></span>
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary m-2">Save</button>
            <a asp-controller="Season" asp-action="Rounds" asp-route-seasonId="@Model.SeasonId" class="btn btn-secondary m-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}