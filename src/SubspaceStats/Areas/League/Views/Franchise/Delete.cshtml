@using SubspaceStats.Areas.League.Models.Franchise
@model Franchise

@{
    ViewData["Title"] = "Delete Franchise";
}

<h1>Delete franchise</h1>

<div class="mb-3">
    <a asp-action="Index">Back to franchise List</a>
</div>

<div class="container">
    <form asp-controller="Franchise" asp-action="Delete">
        <div class="mb-3">
            <label asp-for="Id" class="form-label"></label>
            <input type="number" class="form-control" value="@Model.Id" disabled />
            <input asp-for="Id" type="hidden" />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary m-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary m-2">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}