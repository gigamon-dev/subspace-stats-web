@using SubspaceStats.Areas.League.Models.Franchise
@model FranchiseDetails

@{
	ViewData["Title"] = "Franchise Details";
}

<div class="d-flex">
	<h1>Franchise Details</h1>
</div>

<div class="mb-3">
	<a asp-controller="Home" asp-action="Index" class="mx-2">Home</a>
	<a asp-action="Index">Franchise List</a>
	<a asp-action="Edit" class="mx-2">Edit</a>
</div>

<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover w-auto">
		<thead>
			<tr>
				<th colspan="2" class="text-center">@Model.Franchise.Name</th>
			</tr>
			<tr>
				<th>Team</th>
				<th>Season</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var teamAndSeason in Model.TeamsAndSeasons)
			{
				<tr>
					<td><a asp-controller="Team" asp-action="Index" asp-route-id="@teamAndSeason.TeamId" class="link-underline link-underline-opacity-0 link-underline-opacity-75-hover">@teamAndSeason.TeamName</a></td>
					<td><a asp-controller="Season" asp-action="Index" asp-route-id="@teamAndSeason.SeasonId" class="link-underline link-underline-opacity-0 link-underline-opacity-75-hover">@teamAndSeason.SeasonName</a></td>
				</tr>
			}
		</tbody>
	</table>
</div>
