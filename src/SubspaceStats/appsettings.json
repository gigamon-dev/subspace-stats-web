{
  "General": {
    // Change this to your site's name. It affects the 2-factor auth QR code.
    "ApplicationName": "Subspace Stats",

    // The timezone to display times in (match times).
    "TimeZoneId": "Eastern Standard Time"
  },
  "Stats": {
    "Navbar": {
      "LeaderboardGameTypes": [
        2, // SVS 2v2
        3, // SVS 3v3
        4 // SVS 4v4
      ]
    },
    "Home": {
      "Ratings": [
        {
          "GameType": 2, // SVS_2v2
          "PeriodType": "Monthly",
          "Top": 10
        },
        {
          "GameType": 3, // SVS_3v3
          "PeriodType": "Monthly",
          "Top": 10
        },
        {
          "GameType": 4, // SVS_4v4
          "PeriodType": "Monthly",
          "Top": 10
        }
      ]
    },
    "Top": {
      "AvgRating": {
        "MinGamesPlayed": 3
      },
      "KillsPerMinute": {
        "MinGamesPlayed": 3
      }
    },
    "PlayerDetails": {
      "KillStatsLimit": 50
    },
    "PeriodCutoff": "365"
  },
  "League": {
    //// To seed the database with an initial administrator.
    //// When the application starts, it will add the specified username and assign it the Administrator role.
    //// Make sure you use a strong enough password or it will fail (see the logs if that happens).
    //// If you use it, remember to remove the setting afterwards.
    //"Seed": {
    //  "AdminUsername": "",
    //  "AdminPassword": ""
    //},

    // IDs of the leagues to show on the league home page.
    "LeagueIds": [ 13, 12 ],

    // Absolute path of images for league. Team banners are stored here.
    //"ImagePhysicalPath": "*** YOUR FILE SYSTEM PATH HERE ***",

    // The URL path to request images from ImagePhysicalPath.
    "ImageUrlPath": "/img/League",

    // The image file format to save images that are uploaded.
    "ImageUploadFormat": "png"
  },
  "AuthenticationEmail": {
    // The "From" email address.
    "FromEmail": "noreply@example.com",

    // The "From" name.
    "FromName": "Subspace Stats",

    // The SendGrid key or leave empty to use SMTP.
    // When using SMTP, fill in the other settings that have names prefixed with "Smtp".
    "SendGridKey": "",

    "SmtpHost": "",
    "SmtpPort": 587,
    "SmtpSSL": true,
    "SmtpUseDefaultCredentials": false,
    "SmtpUsername": "user@example.com",
    "SmtpPassword": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "AllowedHosts": "*"
}
