{
  "General": {
    // Change this to your site's name. It affects the 2-factor auth QR code.
    "ApplicationName": "Subspace Stats",

    // The timezone to display times in (match times).
    "TimeZoneId": "Eastern Standard Time"
  },
  "Stats": {
    "Navbar": {
      "LeaderboardGameTypes": [
        2, // SVS 2v2
        3, // SVS 3v3
        4 // SVS 4v4
      ]
    },
    "Home": {
      "Ratings": [
        {
          "GameType": 2, // SVS_2v2
          "PeriodType": "Monthly",
          "Top": 10
        },
        {
          "GameType": 3, // SVS_3v3
          "PeriodType": "Monthly",
          "Top": 10
        },
        {
          "GameType": 4, // SVS_4v4
          "PeriodType": "Monthly",
          "Top": 10
        }
      ]
    },
    "Top": {
      "AvgRating": {
        "MinGamesPlayed": 3
      },
      "KillsPerMinute": {
        "MinGamesPlayed": 3
      }
    },
    "PlayerDetails": {
      "KillStatsLimit": 50
    },
    "PeriodCutoff": "365"
  },
  "League": {
    // IDs of the leagues to show on the league home page.
    "LeagueIds": [ 13, 12 ],

    // Absolute path of images for league. Team banners are stored here.
    //"ImagePhysicalPath": "*** YOUR FILE SYSTEM PATH HERE ***",

    // The URL path to request images from ImagePhysicalPath.
    "ImageUrlPath": "/img/League",

    // The image file format to save images that are uploaded.
    "ImageUploadFormat": "png",

    // To seed the database with an initial administrator.
    // When the application starts, it will add the specified username and assign it the Administrator role.
    // Make sure you use a strong enough password of it will fail (see the logs if that happens).
    // If you use it, remember to remove the setting afterwards.
    //"Seed": {
    //  "AdminUsername": "",
    //  "AdminPassword": ""
    //}
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
